        <locationX>704</locationX>
        <locationY>647</locationY>
        <connector>
            <targetReference>Search_for_Onboarding_Status_Changes</targetReference>
        </connector>
        <inputAssignments>
            <field>Onboarding_Completion_Date__c</field>
            <value>
                <elementReference>Search_for_Onboarding_Status_Changes.CreatedDate</elementReference>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
