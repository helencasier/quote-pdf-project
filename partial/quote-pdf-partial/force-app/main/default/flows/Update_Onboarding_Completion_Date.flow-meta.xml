    <decisions>
        <name>Check_Onboarding_Status</name>
        <label>Check Onboarding Status</label>
        <locationX>616</locationX>
        <locationY>539</locationY>
        <defaultConnector>
            <targetReference>Search_for_Onboarding_Status_Changes</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Onboarding_Field</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Search_for_Onboarding_Status_Changes.Field</leftValueReference>
                <operator>NotEqualTo</operator>
                <rightValue>
                    <stringValue>Onboarding_Status__c</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Search_for_Onboarding_Status_Changes</targetReference>
            </connector>
            <label>Onboarding Field</label>
        </rules>
        <rules>
            <name>Is_Null</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Search_for_Onboarding_Status_Changes.NewValue</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <label>Is Null</label>
        </rules>
        <rules>
            <name>Onboarding_Completed</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Search_for_Onboarding_Status_Changes.NewValue</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Deployed</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Set_onboarding_completion_date</targetReference>
            </connector>
            <label>Onboarding Completed</label>
        </rules>
    </decisions>
    <description>reduce number of executions</description>
