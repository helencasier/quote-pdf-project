<apex:page renderAs="pdf" standardController="Quote" extensions="QuoteController">
<html>
<head>
    <style>
        body {
            font-family: Helvetica, Arial, sans-serif;
            font-size: 10pt;
            color: #333333;
            margin: 30px;
        }
        h1 {
            font-size: 16pt;
            color: #1b4f72;
            margin-bottom: 10px;
        }
        .grand-total {
            background-color: #dce6f1;
            text-align: right;
            font-weight: bold;
            font-size: 11pt;
            padding: 10px;
            border-top: 2px solid #1b4f72;
        }
        .section-header {
            background-color: #dce6f1;
            color: #000000;
            font-weight: bold;
            padding: 8px;
            font-size: 11pt;
        }
        .signature-line {
            border-bottom: 1px dotted #999999;
            width: 250px;
            margin-top: 40px;
        }
        .info-table td {
            border: none;
            padding: 4px 8px;
        }
        .info-table .label {
            font-weight: bold;
            color: #1b4f72;
            width: 140px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            border: 1px solid #ccc;
            padding: 6px;
        }
        th {
            background-color: #1b4f72;
            color: #fff;
            text-align: left;
        }
    </style>
</head>
<body>

<h1>Resilio, Inc.</h1>
<p>
    4900 Hopyard Rd Suite 100<br/>
    Pleasanton, CA 94588, USA
</p>

<table width="100%" style="margin-top: 20px;">
    <tr>
        <td class="section-header">Customer Information</td>
    </tr>
</table>

<table class="info-table" width="100%">
    <tr>
        <td class="label">Prepared By:</td>
        <td>{!preparedByDisplay}</td>
        <td class="label">Quote Number:</td>
        <td>{!Quote.QuoteNumber}</td>
    </tr>
    <tr>
        <td class="label">Primary Contact:</td>
        <td>{!primaryContactName}</td>
        <td class="label">Email:</td>
        <td>{!primaryContactEmail}</td>
    </tr>
    <tr>
        <td class="label">Expiration Date:</td>
        <td>{!TEXT(Quote.ExpirationDate)}</td>
        <td class="label">Created Date:</td>
        <td>{!TEXT(Quote.CreatedDate)}</td>
    </tr>
</table>

<table width="100%" style="margin-top: 20px;">
    <tr>
        <td class="section-header">Quote Line Items</td>
    </tr>
</table>

<table width="100%">
    <thead>
        <tr>
            <th>Product</th>
            <th>Description</th>
            <th style="text-align: right;">Quantity</th>
            <th style="text-align: right;">Unit Price</th>
            <th style="text-align: right;">Total</th>
        </tr>
    </thead>
    <tbody>
        <apex:repeat value="{!wrappedLineItems}" var="wrapper">
            <tr bgcolor="{!wrapper.rowColor}">
                <td>{!wrapper.qli.Product2.Name}</td>
                <td>{!IF(ISBLANK(wrapper.qli.Description), 'Included', wrapper.qli.Description)}</td>
                <td style="text-align: right;">{!TEXT(wrapper.qli.Quantity)}</td>
                <td style="text-align: right;">${!TEXT(wrapper.qli.UnitPrice)}</td>
                <td style="text-align: right;">${!TEXT(wrapper.qli.TotalPrice)}</td>
            </tr>
        </apex:repeat>
    </tbody>
</table>

<p class="grand-total">Grand Total: ${!TEXT(Quote.GrandTotal)}</p>

<table width="100%" style="margin-top: 20px;">
    <tr>
        <td class="section-header">Signatures</td>
    </tr>
</table>

<table width="100%">
    <tr>
        <td style="padding: 10px;">
            <strong>Customer Signature:</strong>
            <div class="signature-line"></div>
            Name (Print): ____________________________________<br/>
            Title: ____________________________________________<br/>
            Date: ____________________________________________<br/>
        </td>
        <td style="padding: 10px;">
            <strong>Resilio, Inc. Signature:</strong>
            <div class="signature-line"></div>
            Name (Print): ____________________________________<br/>
            Title: ____________________________________________<br/>
            Date: ____________________________________________<br/>
        </td>
    </tr>
</table>

</body>
</html>
</apex:page>
